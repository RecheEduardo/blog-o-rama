<article class="blog-post">
    <strong class="d-inline-block text-secondary"><%= article.category.name if article.category %></strong>
    <h2 class="blog-post-title"><%= article.title %></h2>
    <p class="blog-post-meta"><%= m_d_comma_y(article.created_at) %> <a href="#">Chris</a></p>
    <!-- Helper para formatar textos grandes nos artigos da home -->
    <p style="text-align: justify;"><%= truncate(article.body, length: 300) %></p>
    
    <%= link_to "See more...", article, class: 'btn bg-gradient bg-primary text-light'%>
</article>
